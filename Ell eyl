loadstring([[
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "SpecialMenuGUI"
gui.ResetOnSpawn = false

local lang = nil
local texts = {
    tr = {
        title = "üåü √ñzel Men√º üåü",
        enterCode = "Kodu Girin:",
        approve = "Onayla",
        getCode = "Kodu Al",
        codeCopied = "Kopyalandƒ±!",
        codeText = "Kodu Al",
        approved = "Onaylandƒ±",
        espOn = "ESP A√ß",
        espOff = "ESP Kapat",
        teleport = "Sihirli Elma",
        speed = "Hƒ±zƒ±nƒ±zƒ± Girin:",
        setSpeed = "Hƒ±zƒ± Ayarla",
        infiniteJumpOn = "Sonsuz Zƒ±plama: A√ßƒ±k",
        infiniteJumpOff = "Sonsuz Zƒ±plama: Kapalƒ±",
        noclipOn = "Duvardan Ge√ßme: A√ßƒ±k",
        noclipOff = "Duvardan Ge√ßme: Kapalƒ±",
        hideMenu = "üëÅ Gizle",
        showMenu = "üìú Men√º",
        closeMenu = "‚ùå",
        code = "special"
    },
    en = {
        title = "üåü Special Menu üåü",
        enterCode = "Enter Code:",
        approve = "Confirm",
        getCode = "Get Code",
        codeCopied = "Copied!",
        codeText = "Get Code",
        approved = "Confirmed",
        espOn = "Enable ESP",
        espOff = "Disable ESP",
        teleport = "Magic Apple",
        speed = "Enter Your Speed:",
        setSpeed = "Set Speed",
        infiniteJumpOn = "Infinite Jump: On",
        infiniteJumpOff = "Infinite Jump: Off",
        noclipOn = "Noclip: On",
        noclipOff = "Noclip: Off",
        hideMenu = "üëÅ Hide",
        showMenu = "üìú Menu",
        closeMenu = "‚ùå",
        code = "special"
    }
}

local langFrame = Instance.new("Frame", gui)
langFrame.Size = UDim2.new(0, 220, 0, 150)
langFrame.Position = UDim2.new(0.5, -110, 0.5, -75)
langFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
langFrame.BackgroundTransparency = 0.2
langFrame.BorderSizePixel = 0

local langTitle = Instance.new("TextLabel", langFrame)
langTitle.Size = UDim2.new(1, 0, 0.4, 0)
langTitle.Position = UDim2.new(0, 0, 0, 0)
langTitle.BackgroundTransparency = 1
langTitle.Text = "Select Language / Dil Se√ß"
langTitle.TextColor3 = Color3.new(1, 1, 1)
langTitle.Font = Enum.Font.SourceSansBold
langTitle.TextSize = 22

local function createLangButton(text, langCode, posY)
    local btn = Instance.new("TextButton", langFrame)
    btn.Size = UDim2.new(1, -20, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, posY)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 20
    btn.Text = text
    btn.MouseButton1Click:Connect(function()
        lang = langCode
        langFrame:Destroy()
        loadFullMenu()
    end)
end

createLangButton("T√ºrk√ße", "tr", 60)
createLangButton("English", "en", 110)

function loadFullMenu()
    local t = texts[lang]

    local frame = Instance.new("Frame", gui)
    frame.Size = UDim2.new(0, 320, 0, 450)
    frame.Position = UDim2.new(0.5, -160, 0.5, -225)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    frame.BackgroundTransparency = 0.4
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true
    frame.Visible = true

    -- Men√º ba≈ülƒ±ƒüƒ±
    local title = Instance.new("TextLabel", frame)
    title.Size = UDim2.new(1, -80, 0, 40)
    title.Text = t.title
    title.TextColor3 = Color3.new(1, 1, 0)
    title.Font = Enum.Font.SourceSansBold
    title.TextSize = 26
    title.BackgroundTransparency = 1
    title.Position = UDim2.new(0, 10, 0, 0)

    -- üëÅ Gizle butonu
    local hideBtn = Instance.new("TextButton", frame)
    hideBtn.Size = UDim2.new(0, 70, 0, 30)
    hideBtn.Position = UDim2.new(1, -150, 0, 5)
    hideBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    hideBtn.TextColor3 = Color3.new(1, 1, 1)
    hideBtn.Font = Enum.Font.SourceSansBold
    hideBtn.TextSize = 16
    hideBtn.Text = t.hideMenu

    -- ‚ùå √áarpƒ± butonu (tam kapatma)
    local closeBtn = Instance.new("TextButton", frame)
    closeBtn.Size = UDim2.new(0, 30, 0, 30)
    closeBtn.Position = UDim2.new(1, -40, 0, 5)
    closeBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
    closeBtn.TextColor3 = Color3.new(1, 1, 1)
    closeBtn.Font = Enum.Font.SourceSansBold
    closeBtn.TextSize = 18
    closeBtn.Text = t.closeMenu

    -- K√º√ß√ºk üìú Men√º butonu (ba≈üta gizli)
    local showMenuBtn = Instance.new("TextButton", gui)
    showMenuBtn.Size = UDim2.new(0, 90, 0, 35)
    showMenuBtn.Position = UDim2.new(0, 10, 0, 10)
    showMenuBtn.BackgroundColor3 = Color3.fromRGB(50, 120, 200)
    showMenuBtn.TextColor3 = Color3.new(1, 1, 1)
    showMenuBtn.Font = Enum.Font.SourceSansBold
    showMenuBtn.TextSize = 16
    showMenuBtn.Text = t.showMenu
    showMenuBtn.Visible = false

    -- Kaydƒ±rƒ±labilir i√ßerik
    local scrollFrame = Instance.new("ScrollingFrame", frame)
    scrollFrame.Size = UDim2.new(1, -10, 1, -50)
    scrollFrame.Position = UDim2.new(0, 5, 0, 45)
    scrollFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
    scrollFrame.ScrollBarThickness = 8
    scrollFrame.BackgroundTransparency = 1

    local label = Instance.new("TextLabel", scrollFrame)
    label.Size = UDim2.new(1, -20, 0, 25)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.Text = t.enterCode
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSansBold
    label.TextSize = 20
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.BackgroundTransparency = 1

    local box = Instance.new("TextBox", scrollFrame)
    box.Size = UDim2.new(1, -20, 0, 35)
    box.Position = UDim2.new(0, 10, 0, 30)
    box.PlaceholderText = t.code
    box.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    box.TextColor3 = Color3.new(1, 1, 1)
    box.Font = Enum.Font.SourceSans
    box.TextSize = 20

    local approve = Instance.new("TextButton", scrollFrame)
    approve.Size = UDim2.new(0.45, -5, 0, 40)
    approve.Position = UDim2.new(0, 10, 0, 75)
    approve.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
    approve.TextColor3 = Color3.new(1, 1, 1)
    approve.Font = Enum.Font.SourceSansBold
    approve.TextSize = 20
    approve.Text = t.approve

    local copy = Instance.new("TextButton", scrollFrame)
    copy.Size = UDim2.new(0.45, -5, 0, 40)
    copy.Position = UDim2.new(0.55, 0, 0, 75)
    copy.BackgroundColor3 = Color3.fromRGB(34, 139, 34)
    copy.TextColor3 = Color3.new(1, 1, 1)
    copy.Font = Enum.Font.SourceSansBold
    copy.TextSize = 20
    copy.Text = t.getCode

    local features = Instance.new("Frame", scrollFrame)
    features.Size = UDim2.new(1, -20, 0, 900)
    features.Position = UDim2.new(0, 10, 0, 130)
    features.BackgroundTransparency = 1
    features.Visible = false

    local function createBtn(text, posY)
        local btn = Instance.new("TextButton", features)
        btn.Size = UDim2.new(1, 0, 0, 40)
        btn.Position = UDim2.new(0, 0, 0, posY)
        btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        btn.TextColor3 = Color3.new(1, 1, 1)
        btn.Font = Enum.Font.SourceSansBold
        btn.TextSize = 18
        btn.Text = text
        return btn
    end

    -- Sonsuzluk Zƒ±plama
    local infiniteJump = false
    local infiniteBtn = createBtn(t.infiniteJumpOff, 0)
    infiniteBtn.MouseButton1Click:Connect(function()
        infiniteJump = not infiniteJump
        infiniteBtn.Text = infiniteJump and t.infiniteJumpOn or t.infiniteJumpOff
    end)
    UIS.JumpRequest:Connect(function()
        if infiniteJump and humanoid then
            humanoid:ChangeState("Jumping")
        end
    end)

    -- Duvardan Ge√ßme (Noclip)
    local noclip = false
    local noclipBtn = createBtn(t.noclipOff, 50)
    noclipBtn.MouseButton1Click:Connect(function()
        noclip = not noclip
        noclipBtn.Text = noclip and t.noclipOn or t.noclipOff
    end)
    RunService.Stepped:Connect(function()
        if noclip and player.Character then
            for _, v in pairs(player.Character:GetDescendants()) do
                if v:IsA("BasePart") and v.CanCollide then
                    v.CanCollide = false
                end
            end
        end
    end)

    -- Hƒ±z Mekanizmasƒ±
    local speedLabel = Instance.new("TextLabel", features)
    speedLabel.Size = UDim2.new(1, 0, 0, 25)
    speedLabel.Position = UDim2.new(0, 0, 0, 100)
    speedLabel.Text = t.speed
    speedLabel.TextColor3 = Color3.new(1, 1, 1)
    speedLabel.Font = Enum.Font.SourceSansBold
    speedLabel.TextSize = 18
    speedLabel.BackgroundTransparency = 1

    local speedBox = Instance.new("TextBox", features)
    speedBox.Size = UDim2.new(1, 0, 0, 35)
    speedBox.Position = UDim2.new(0, 0, 0, 130)
    speedBox.PlaceholderText = "√ñrn: 100"
    speedBox.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    speedBox.TextColor3 = Color3.new(1, 1, 1)
    speedBox.Font = Enum.Font.SourceSans
    speedBox.TextSize = 18

    local speedBtn = createBtn(t.setSpeed, 180)
    speedBtn.MouseButton1Click:Connect(function()
        local speed = tonumber(speedBox.Text)
        if speed and humanoid then
            humanoid.WalkSpeed = speed
        end
    end)

    -- Sihirli Elma (I≈üƒ±nlanma)
    local toolName = "Sihirli Elma"
    local function createApple()
        if not player.Backpack:FindFirstChild(toolName) then
            local apple = Instance.new("Tool")
            apple.Name = toolName
            local handle = Instance.new("Part")
            handle.Name = "Handle"
            handle.Size = Vector3.new(1,1,1)
            handle.Color = Color3.fromRGB(255,0,0)
            handle.Parent = apple
            apple.RequiresHandle = true
            apple.Parent = player.Backpack

            local mouse = player:GetMouse()
            apple.Activated:Connect(function()
                local targetPos = mouse.Hit.p + Vector3.new(0, 5, 0)
                if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    player.Character.HumanoidRootPart.CFrame = CFrame.new(targetPos)
                end
            end)
        end
    end
    player.CharacterAdded:Connect(function()
        char = player.Character
        humanoid = char:WaitForChild("Humanoid")
        createApple()
    end)
    local appleBtn = createBtn("üçé " .. t.teleport, 230)
    appleBtn.MouseButton1Click:Connect(function()
        createApple()
    end)

    -- Men√º gizleme/g√∂sterme butonu
    hideBtn.MouseButton1Click:Connect(function()
        frame.Visible = false
        showMenuBtn.Visible = true
    end)
    showMenuBtn.MouseButton1Click:Connect(function()
        frame.Visible = true
        showMenuBtn.Visible = false
    end)

    -- Men√º tamamen kapatma butonu
    closeBtn.MouseButton1Click:Connect(function()
        frame.Visible = false
        showMenuBtn.Visible = false
    end)

    -- F4 ile men√ºy√º tekrar a√ßma
    UIS.InputBegan:Connect(function(input, gp)
        if not gp and input.KeyCode == Enum.KeyCode.F4 then
            frame.Visible = not frame.Visible
        end
    end)

    -- Kod doƒürulama
    approve.MouseButton1Click:Connect(function()
        if box.Text:lower() == t.code then
            features.Visible = true
            approve.Text = t.approved
            approve.BackgroundColor3 = Color3.fromRGB(34, 139, 34)
        else
            features.Visible = false
            approve.Text = t.approve
            approve.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
        end
    end)

    -- Kodu Al (Link g√ºncel)
    copy.MouseButton1Click:Connect(function()
        pcall(function()
            setclipboard("https://discord.gg/at5WcSTc")
            copy.Text = t.codeCopied
            task.wait(2)
            copy.Text = t.codeText
        end)
    end)
end
]])()
